<!DOCTYPE html>
<html lang="es">
	<%- include ("templates/head.ejs", {titulo: 'Registrar mascota', css: '/css/registroMascota.css'}) %>
	<body>
		<%- include ("templates/user.header.ejs") %>;
    <section class="ventana">
        <div class="contenedor">
            <div class="ingreso-container">
                <h2>Datos Mascota</h2>
                <form class="ingreso-form" id="mascotaForm" action="/registroMascota" method="post" enctype="multipart/form-data">
                    <div class="nombre">
                        <input type="text" id="nombre" name="nombre" placeholder="Nombre" required>
                    </div>
                    <div class="tipo">
                        <input type="text" id="tipo" name="tipo" placeholder="Tipo" required>
                    </div>
                    <div class="sexo-raza">
                        <div class="raza">
                            <input type="text" id="raza" name="raza" placeholder="Raza" required>
                        </div>
                        <div class="sexo"  >
                            <label for="sexo">Selecciona el género:</label>
                            <select id="sexo" name="sexo" required>
                            <option value="M">Macho</option>
                            <option value="F">Hembra</option>
                            </select>
                        </div>
                    </div>
                    <div class="fecha">
                        <label>Fecha de Nacimiento<input type="date" id="fecha" name="fecha" placeholder="Fecha" required></label>
                    </div>
                    <div class="photo-mascota">
                        <label for="foto" alt="FotoMascota">Foto de la Mascota</label>
                        <input type="file" id="photo" name="photo" accept=".jpg, .jpeg, .png" required>
                    </div>
                    <div class="evidencia-mascota">
                        <label for="evidencias">Evidencias (PDF o Imágenes)</label>
                        <input type="file" id="evidencia" name="evidence" accept=".pdf, .jpg, .jpeg, .png" multiple required>
                    </div>                    

                    <script>
                        const icono = document.getElementById("iconoMascota");
                        const inputFoto = document.getElementById("photo");
                    
                        icono.addEventListener("click", function () {
                          inputFoto.click();
                        });
                    </script>

                    <script>
                        
                        const nav = document.querySelector("#nav");
                        const abrir = document.querySelector("#menu-abrir");
                        const cerrar = document.querySelector("#menu-cerrar");
                    
                        abrir.addEventListener("click", () => {
                          nav.classList.add("visible");
                          nav.classList.toggle("action");
                        });

                        cerrar.addEventListener("click", () => {
                          nav.classList.remove("visible");
                        })
                    </script>
                    <button id="btnIngresar" type="submit" >Registrar Mascota</button>
                </form>            
            </div>
        </div>
    </section>

    <script
			src="https://kit.fontawesome.com/81581fb069.js"
			crossorigin="anonymous"
		></script>

		<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

		<!-- custom js file link  -->
		<script src="js/script.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
